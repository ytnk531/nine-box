<!DOCTYPE html>
<html>
<head>
  <title>nine boxes</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

  <%= stylesheet_link_tag "application" %>
  <%= javascript_importmap_tags %>
</head>

<body class="bg-blue-200 text-gray-700">

<%= render 'layouts/header' %>
<div class="mx-auto">
  <% if notice.present? %>
    <p class="bg-green-100 text-gray-600 p-2"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="bg-red-200 text-gray-600 p-2"><%= alert %></p>
  <% end %>
</div>
<div class="container mx-auto mt-10">
  <%= yield %>
</div>
</body>
</html>
